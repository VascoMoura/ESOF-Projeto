<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">

    <package>projectesof.esof.models</package>

    <entity class="Projeto">
        <table name="projeto"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="valor">
                <column name="valor"/>
            </basic>
            <basic name="tempo">
                <column name="tempo"/>
            </basic>
            <one-to-many name="tarefas" mapped-by="projeto">
                <cascade><cascade-all/></cascade>
            </one-to-many>

        </attributes>
    </entity>

    <entity class="Empregado">
        <table name="empregado"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="email">
                <column name="email"/>
            </basic>
            <one-to-many name="tarefas" mapped-by="empregado">
                <cascade><cascade-all/></cascade>
            </one-to-many>

        </attributes>
    </entity>

    <entity class="Tarefa">
        <table name="tarefa"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="name">
                <column name="name"/>
            </basic>
            <many-to-one name="projeto"><cascade><cascade-all/></cascade>
            </many-to-one>
            <many-to-one name="empregado"><cascade><cascade-all/></cascade>
            </many-to-one>
        </attributes>
    </entity>

</entity-mappings>